{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: My Database",
            "type": "debugpy",
            "request": "launch",
            "envFile": "${workspaceFolder}/djangobackend/.env",
            "program": "${workspaceFolder}/djangobackend/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "Nuxt Client: My Database",
            "url": "http://localhost:3000",
            // this should point to your Nuxt `srcDir`, which is `app` by default
            "webRoot": "${workspaceFolder}/frontend/app"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Nuxt Server: My Database",
            "outputCapture": "std",
            "program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.mjs",
            "args": [
                "dev"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Nuxt Fullstack: My Database",
            "configurations": [
                "Nuxt Server: My Database",
                "Nuxt Client: My Database"
            ]
        }
    ]
}
